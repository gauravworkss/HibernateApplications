<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.dss.bean.Product" table="prod_filter">
		<id name="pid" />
		<property name="pname" />
		<property name="pcost" />
		<property name="ptype" />
	</class>
	<filter-def name="my_filter">
		<filter-param name="ptype" type="java.lang.String"/>
		<!-- <filter-param name="pid" type="java.lang.String"/> -->
	</filter-def>
</hibernate-mapping>    